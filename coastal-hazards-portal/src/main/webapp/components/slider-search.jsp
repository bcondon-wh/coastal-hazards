<div id="application-slide-search-container" class="application-search-container">
    <div id="application-slide-search-tab" class="application-slide-tab hidden">
        <div id="application-slide-search-tab-icon-container"><i class="icon-search"></i></div>
    </div>
    <div id="application-slide-search-content" class="application-slide-content">
        <div id="application-slide-search-content-container" class="container-fluid"></div>
    </div>
</div>

<%-- This element is used as a template for creating new search cards --%>
<div id="application-slide-search-container-card-template" class="hidden">
    <div class="application-slide-search-container-card well well-small">
        <div class="row-fluid">
            <div class="span2"><img class="application-slide-search-container-card-image" /></div>
            <div class="application-slide-search-container-card-title-description-container span10">
                <div class="row-fluid">
                    <div class="application-slide-search-container-card-title"><p class="center"></p></div>
                    <div class="application-slide-search-container-card-description"></div>
                </div>
            </div>
        </div>
        <div class="row-fluid text-center">
            <div class="btn-group">
                <button class="application-slide-search-container-card-button-search btn btn-mini application-slide-search-container-card-template-button" type="button"><i class="fa fa-star"></i></button>
                <button class="application-slide-search-container-card-button-remove btn btn-mini application-slide-search-container-card-template-button" type="button"><i class="icon-remove"></i></button>
                <button class="application-slide-search-container-card-button-info btn btn-mini application-slide-search-container-card-template-button" type="button"><i class="fa fa-info-circle"></i></button>
                <button class="application-slide-search-container-card-button-ok btn btn-mini application-slide-search-container-card-template-button" type="button"><i class="fa fa-check"></i></button>
            </div>
        </div>
    </div>
</div>