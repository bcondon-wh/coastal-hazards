<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>coastal-hazards-ui</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <listener>
        <description>ServletContextListener</description>
        <listener-class>gov.usgs.cida.coastalhazards.InitListener</listener-class>
    </listener>

    <!-- Tomcat Filter -->
    <filter>
        <filter-name>TomcatFilter</filter-name>
        <filter-class>gov.usgs.cida.tomcatfilters.RequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TomcatFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Tuckey Filter -->
        <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>ERROR</param-value>
        </init-param>
        <init-param>
            <param-name>confReloadCheckInterval</param-name>
            <param-value>60</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>


    <servlet>
        <servlet-name>GeoServerServlet</servlet-name>
        <servlet-class>gov.usgs.cida.proxy.PathPreservingProxyServlet</servlet-class>
        <init-param>
            <param-name>forward-url</param-name>
            <param-value>http://130.11.165.155:8081/geoserver</param-value>
        </init-param>
        <init-param>
            <param-name>readTimeout</param-name>
            <param-value>300000</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeoServerServlet</servlet-name>
        <url-pattern>/geoserver/*</url-pattern>
    </servlet-mapping>
    
    <!-- Used to accept file uploads from the front end -->
    <servlet>
        <servlet-name>UploadService</servlet-name>
        <servlet-class>gov.usgs.cida.coastalhazards.service.UploadService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadService</servlet-name>
        <url-pattern>/server/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ImportService</servlet-name>
        <servlet-class>gov.usgs.cida.coastalhazards.service.ImportService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImportService</servlet-name>
        <url-pattern>/service/import</url-pattern>
    </servlet-mapping>


</web-app>
