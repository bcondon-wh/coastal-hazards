<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Coastal Hazards Portal</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- FILTERS -->
	<filter>
		<filter-name>TomcatFilter</filter-name>
		<filter-class>gov.usgs.cida.tomcatfilters.RequestFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>TomcatFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- SERVLET -->
	<!-- AlternateProxy -->
	<servlet>
		<servlet-name>GeoServerServlet</servlet-name>
		<servlet-class>gov.usgs.cida.proxy.AlternateProxyServlet</servlet-class>
		<init-param>
			<param-name>forward-url-param</param-name>
			<param-value>coastal-hazards.geoserver.endpoint</param-value>
		</init-param>
		<init-param>
			<param-name>readTimeout</param-name>
			<param-value>300000</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>SessionService</servlet-name>
		<servlet-class>gov.usgs.cida.coastalhazards.service.SessionService</servlet-class>
		<servlet-mapping>
			<servlet-name>GeoServerServlet</servlet-name>
			<url-pattern>/geoserver/*</url-pattern>
		</servlet-mapping>
	</servlet>
	
	<!-- MAPPING -->
	<servlet-mapping>
		<servlet-name>GeoServerServlet</servlet-name>
		<url-pattern>/geoserver/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SessionService</servlet-name>
		<url-pattern>/service/session</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MinifyService</servlet-name>
		<servlet-class>gov.usgs.cida.coastalhazards.service.MinifyService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MinifyService</servlet-name>
		<url-pattern>/service/minify</url-pattern>
	</servlet-mapping>
</web-app>
